<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spa Scrub</title>
    <link rel="icon" href="images/logo-web.png">
    <link rel="stylesheet" href="css/spa_page.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    <script src="js/spa.js" defer></script>

</head>

<body>
    <div class="sidebar">
        <%- include('sidebar') %>
    </div>

    <div class="profile">
        <%- include('profile') %>
    </div>

    <div class="pindah">
        <a href="/spaMasker"><button class="btn-masker">Masker</button></a>
        <a href="/spaScrub"><button class="btn-scrub">Scrub</button></a>
    </div>

    <div class="container">
        <button class="btn-tambah" data-target="#tambahScrub">Tambah</button>
        <div class="overlay" id="#tambahScrub">
            <div class="popup">
                <div>
                    <div class="edit modal-header">
                        <p>Tambah Scrub Baru</p>
                    </div>
                    <div class="form">
                        <form method="post" action="/tambahScrub">
                            <p>Nama</p>
                            <div class="input-form">
                                <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                <input type="text" name="namaScrub" placeholder="Masukkan nama scrub" required>
                            </div>

                            <p>Harga</p>
                            <div class="input-form">
                                <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                <input type="text" name="hargaScrub" placeholder="Masukkan harga scrub" required>
                            </div>

                            <div class="footer-modal">
                                <button class="btn-edit">Simpan</button>
                                <button type="button" class="btn-batal close" data-target="#tambahScrub" >Batal</button>
                            </div>
                        </form>


                    </div>

                </div>
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Harga</th>
                    <th>Aksi</th>
                </tr>
            </thead>

            <tbody>
                <% let i = 1 %>
                <% for(let row of dataSpaScrub) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= row.nama %></td>
                        <td><%= row.harga %></td>
                        <td>
                            <a class="btnEdit" data-target="#bukaModal<%= row.id_spaS %>"><i class="fa-regular fa-pen-to-square fa-lg" style="color: #000000;"></i></a>
                            <div class="overlay" id="#bukaModal<%= row.id_spaS %>">
                                <div class="popup">
                                    <div>
                                        <div class="edit modal-header">
                                            <p>Edit Data Scrub</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/editScrub/<%= row.id_spaS %>">
                                                <p>Scrub</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                                    <input type="text" name="scrub" value="<%= row.nama %>" required>
                                                </div>
                                                
                                                <p>Harga</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                                    <input type="text" name="harga" value="<%= row.harga %>" required>
                                                </div>

                                                <div class="footer-modal">
                                                    <button class="btn-edit">Simpan</button>
                                                    <button type="button" class="btn-batal close" data-target="#bukaModal<%= row.id_spaS %>">Batal</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% i++ %>
                <% } %>
            </tbody>

        </table>
</body>