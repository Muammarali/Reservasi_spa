<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Member</title>
    <link rel="icon" href="images/logo-web.png">
    <link rel="stylesheet" href="css/data_member.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    <script src="js/dataMember.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</head>

<body>
    <div class="sidebar">
        <%- include('sidebar') %>
    </div>

    <div class="profile">
        <i class="fa-regular fa-circle-user" style="color: #ffffff;"></i>
        <p><%= dataSession %></p>
    </div>

    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Username</th>
                    <th>Nomor HP</th>
                    <th>Alamat</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            
            <tbody>
                <% let i = 1 %>
                <% for(let row of dataMember) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= row.nama %></td>
                        <td><%= row.username %></td>
                        <td><%= row.no_hp %></td>
                        <td><%= row.alamat %></td>
                        <td>
                            
                            <a class="btn btn-dark" data-toggle="modal" data-target="#tambahModel<%= row.username %>"><i class="fa-regular fa-pen-to-square fa-lg" style="color: #000000;"></i></a>
                            <div class="modal fade" id="tambahModel<%= row.username %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- <span class ="modal-close" data-dismiss="modal"><i class="fa-solid fa-xmark" style="color: #000000;"></i></span> -->
                                        <div class="edit modal-header">
                                            <p>Edit Data Member</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/edit/<%= row.username %>">
                                                <p>Nama</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-user" style="color: #000000;"></i>
                                                    <input type="text" name="nama" value="<%= row.nama %>" required>
                                                </div>
                                
                                                <p>Username</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-at" style="color: #000000;"></i>
                                                    <input type="text" name="username" value="<%= row.username %>" required>
                                                </div>
                                
                                                <p>Nomor HP</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-phone" style="color: #000000;"></i>
                                                    <input type="tel" name="nomorhp" value="<%= row.no_hp %>" required>
                                                </div>
                                
                                                <p>Alamat</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-address-card" style="color: #000000;"></i>
                                                    <input type="text" name="alamat" value="<%= row.alamat %>" required>
                                                </div>
                                
                                                <div class="footer-modal">
                                                    <button class="btn-edit">Simpan</button>
                                                    <button class="btn-batal" data-dismiss="modal">Batal</button>
                                                </div>
                                            </form>
                            
                            
                                        </div>
                                    
                                    </div>
                                </div>
                            </div>
                            </div>
                        </td>
                    </tr>
                    <% i++ %>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>