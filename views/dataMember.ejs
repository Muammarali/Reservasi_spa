<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Member</title>
    <link rel="icon" href="images/logo-web.png">
    <link rel="stylesheet" href="css/data_member.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    <script src="js/dataMember.js" defer></script>

</head>

<body>
    <div class="sidebar">
        <%- include('sidebar') %>
    </div>

    <div class="profile">
        <%- include('profile') %>
    </div>

    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Username</th>
                    <th>Nomor HP</th>
                    <th>Alamat</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            
            <tbody>
                <% let i = 1 %>
                <% for(let row of result) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= row.nama %></td>
                        <td><%= row.username %></td>
                        <td><%= row.no_hp %></td>
                        <td><%= row.alamat %></td>
                        <td>
                            
                            <a class="btnEdit" data-target="#bukaModal<%= row.username %>"><i class="fa-regular fa-pen-to-square fa-lg" style="color: #000000;"></i></a>
                            <div class="overlay" id="#bukaModal<%= row.username %>">
                                <div class="popup">
                                    <div>
                                        <div class="edit modal-header">
                                            <p>Edit Data Member</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/edit/<%= row.username %>">
                                                <p>Nama</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-user" style="color: #000000;"></i>
                                                    <input type="text" name="nama" value="<%= row.nama %>" required>
                                                </div>
                                
                                                <p>Username</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-at" style="color: #000000;"></i>
                                                    <input type="text" name="username" value="<%= row.username %>" required>
                                                </div>
                                
                                                <p>Nomor HP</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-phone" style="color: #000000;"></i>
                                                    <input type="tel" name="nomorhp" value="<%= row.no_hp %>" required>
                                                </div>
                                
                                                <p>Alamat</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-address-card" style="color: #000000;"></i>
                                                    <input type="text" name="alamat" value="<%= row.alamat %>" required>
                                                </div>
                                
                                                <div class="footer-modal">
                                                    <button class="btn-edit">Simpan</button>
                                                    <button type="button" class="btn-batal close" data-target="#bukaModal<%= row.username %>">Batal</button>
                                                </div>
                                            </form>
                            
                                        </div>
                                    
                                    </div>
                                </div>
                            </div>
                            </div>
                        </td>
                    </tr>
                    <% i++ %>
                <% } %>
            </tbody>
        </table>

        <div class="pagination">
            <% if (page > 1) { %> <a href="/dataMember?page=<%= page-1 %>">Back</a> <% } %>
            <% for(let i = 1; i <= endingLink; i++) { %>
                <% if (i === page) { %>
                    <a class="selectedLink" href="/dataMember?page=<%= i %>"><%= i %></a>
                    <% continue; %>
                <% } %>
                <a href="/dataMember?page=<%= i %>"><%= i %></a>
            <% } %>
            <% if (page < numberOfPages) { %> <a href="/dataMember?page=<%=page+1%>">Next</a> <% } %>
        </div>

    </div>

</body>
</html>