<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Body Massage</title>
    <link rel="icon" href="images/logo-web.png">
    <link rel="stylesheet" href="css/bodyM_page.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    <script src="js/spa.js" defer></script>
</head>

<body>
    <div class="sidebar">
        <%- include('sidebar') %>
    </div>

    <div class="profile">
        <%- include('profile') %>
    </div>

    <div class="container">
        <button class="btn-tambah" data-target="#tambahOil">Tambah</button>
        <div class="overlay" id="#tambahOil">
            <div class="popup">
                <div>
                    <div class="edit modal-header">
                        <p>Tambah Oil Baru</p>
                    </div>
                    <div class="form">
                        <form method="post" action="/tambahOil">
                            <p>Nama</p>
                            <div class="input-form">
                                <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                <input type="text" name="namaOil" placeholder="Masukkan nama oil" required>
                            </div>

                            <p>Oil</p>
                            <div class="input-form">
                                <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                <input type="text" name="hargaOil" placeholder="Masukkan harga oil" required>
                            </div>

                            <div class="footer-modal">
                                <button class="btn-edit">Simpan</button>
                                <button type="button" class="btn-batal close" data-target="#tambahOil" >Batal</button>
                            </div>
                        </form>


                    </div>

                </div>
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Harga</th>
                    <th>Aksi</th>
                </tr>
            </thead>

            <tbody>
                <% let i = 1 %>
                <% for(let row of dataBodyM) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= row.oil %></td>
                        <td><%= row.harga %></td>
                        <td>
                            <a class="btnEdit" data-target="#bukaModal<%= row.id_bm %>"><i class="fa-regular fa-pen-to-square fa-lg" style="color: #000000;"></i></a>
                            <div class="overlay" id="#bukaModal<%= row.id_bm %>">
                                <div class="popup">
                                    <div>
                                        <div class="edit modal-header">
                                            <p>Edit Data Oil</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/editOil/<%= row.id_bm %>">
                                                <p>Oil</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                                    <input type="text" name="oil" value="<%= row.oil %>" required>
                                                </div>

                                                <p>Harga</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                                    <input type="text" name="harga" value="<%= row.harga %>" required>
                                                </div>
                                
                                                <div class="footer-modal">
                                                    <button class="btn-edit">Simpan</button>
                                                    <button type="button" class="btn-batal close" data-target="#bukaModal<%= row.id_bm %>">Batal</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </td>
                    </tr>
                    <% i++ %>
                <% } %>
            </tbody>

        </table>
</body>