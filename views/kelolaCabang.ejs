<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Baru</title>
    <link rel="icon" href="images/logo-web.png">
    <link rel="stylesheet" href="css/kelola_cabang.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    <script src="js/dataMember.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</head>

<body>
    <div class="sidebar">
        <%- include('sidebar') %>
    </div>

    <div class="profile">
        <%- include('profile') %>
    </div>

    <div class="container">

        <div class="filter-kota">
            <i class="fa-solid fa-filter" style="color: #000000;"></i>
            <p>Kota :</p>
            <select name="dropdownKota" id="dropdownKota">
                <option disabled selected>Pilih kota</option>
                <% let j = 1%>    
                <% for(let row of dataKota){ %>
                    <option value="<% j %>"><%= row.nama_kota %></option>
                <% }%>    
            </select>
        </div>

        <button class="btn-tambah" data-toggle="modal" data-target="#tambah">Tambah</button>
        <div class="modal fade" id="tambah" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- <span class ="modal-close" data-dismiss="modal"><i class="fa-solid fa-xmark" style="color: #000000;"></i></span> -->
                    <div class="edit modal-header">
                        <p>Tambah Cabang Baru</p>
                    </div>
                    <div class="form">
                        <form method="post" action="/tambahCabang">
                            <p>Nama</p>
                            <div class="input-form">
                                <i class="fa-solid fa-user" style="color: #000000;"></i>
                                <input type="text" name="nama" placeholder="Masukkan nama" required>
                            </div>
        
                            <p>Alamat</p>
                            <div class="input-form">
                                <i class="fa-solid fa-at" style="color: #000000;"></i>
                                <input type="text" name="username" placeholder="Masukkan alamat" required>
                            </div>
        
                            <p>Kota</p>
                            <div class="input-form">
                                <i class="fa-solid fa-address-card" style="color: #000000;"></i>
                                <input type="text" name="alamat" placeholder="Masukkan kota" required>
                            </div>
        
                            <div class="alert">
                                <p>
                                    <%= //isExist %>
                                </p>
                            </div>
        
                            <div class="footer-modal">
                                <button class="btn-edit">Simpan</button>
                                <button class="btn-batal" data-dismiss="modal">Batal</button>
                            </div>
                        </form>
        
        
                    </div>
        
                </div>
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Alamat</th>
                    <th>Kota</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            
            <tbody>
                <% let i = 1 %>
                <% for(let row of dataCabang) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= row.nama %></td>
                        <td><%= row.alamat %></td>
                        <td><%= row.nama_kota %></td>
                        <td>
                            <a class="btn btn-dark" data-toggle="modal" data-target="#editCabang<%= row.no_cabang %>"><i class="fa-regular fa-pen-to-square fa-lg" style="color: #000000;"></i></a>
                            <div class="modal fade" id="editCabang<%= row.no_cabang %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- <span class ="modal-close" data-dismiss="modal"><i class="fa-solid fa-xmark" style="color: #000000;"></i></span> -->
                                        <div class="edit modal-header">
                                            <p>Edit Data Cabang</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/editCabang/<%= row.no_cabang %>">
                                                <p>Nama</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-file-signature" style="color: #000000;"></i>
                                                    <input type="text" name="nama" value="<%= row.nama %>" required>
                                                </div>
                                
                                                <p>Alamat</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-at" style="color: #000000;"></i>
                                                    <input type="text" name="username" value="<%= row.alamat %>" required>
                                                </div>
                                
                                                <p>Kota</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-city" style="color: #000000;"></i>
                                                    <input type="tel" name="nomorhp" value="<%= row.nama_kota %>" required>
                                                </div>
                                
                                                <div class="footer-modal">
                                                    <button class="btn-edit">Simpan</button>
                                                    <button class="btn-batal" data-dismiss="modal">Batal</button>
                                                </div>
                                            </form>
                            
                                        </div>
                                    
                                    </div>
                                </div>
                            </div>
                            </div>
                        </td>
                    </tr>
                    <% i++ %>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>