<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Baru</title>
    <link rel="icon" href="images/logo-web.png">
    <link rel="stylesheet" href="css/member_baru.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    <script src="js/dataMember.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</head>

<body>
    <div class="sidebar">
        <%- include('sidebar') %>
    </div>

    <div class="profile">
        <%- include('profile') %>
    </div>

    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Username</th>
                    <th>Nomor HP</th>
                    <th>Alamat</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            
            <tbody>
                <% let i = 1 %>
                <% for(let row of dataMember) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= row.nama %></td>
                        <td><%= row.username %></td>
                        <td><%= row.no_hp %></td>
                        <td><%= row.alamat %></td>
                        <td>
                            
                            <a class="btn btn-dark" data-toggle="modal" data-target="#tambahModel<%= row.username %>"><i class="fa-solid fa-circle-check fa-xl" style="color: green;"></i></a>
                            <div class="modal fade" id="tambahModel<%= row.username %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- <span class ="modal-close" data-dismiss="modal"><i class="fa-solid fa-xmark" style="color: #000000;"></i></span> -->
                                        <div class="edit modal-header">
                                            <p>Apakah Anda akan menerima member ini?</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/tambah/<%= row.username %>">
                                                <div class="data-box">
                                                    <div class="data-form">
                                                        <p>Nama :</p>
                                                        <p><%= row.nama %></p>
                                                    </div>
    
                                                    <div class="data-form">
                                                        <p>Username :</p>
                                                        <p><%= row.username %></p>
                                                    </div>
                                                    <div class="data-form">
                                                        <p>Nomor HP :</p>
                                                        <p><%= row.no_hp %></p>
                                                    </div>
                                                    <div class="data-form">
                                                        <p>Alamat :</p>
                                                        <p><%= row.alamat %></p>
                                                    </div>
                                                </div>
                                                <div class="footer-modal">
                                                    <button class="btn-edit">Terima</button>
                                                    <button class="btn-batal" data-dismiss="modal">Batal</button>
                                                </div>
                                            </form>
                            
                            
                                        </div>
                                    
                                    </div>
                                </div>
                            </div>
                            </div>

                            <a class="btn btn-dark" data-toggle="modal" data-target="#hapusModal<%= row.username %>"><i class="fa-solid fa-circle-xmark fa-xl" style="color: red;"></i></a>
                            <div class="modal fade" id="hapusModal<%= row.username %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- <span class ="modal-close" data-dismiss="modal"><i class="fa-solid fa-xmark" style="color: #000000;"></i></span> -->
                                        <div class="edit modal-header">
                                            <p>Apakah Anda akan menolak member ini?</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/tolak/<%= row.username %>">
                                                <div class="data-box">
                                                    <div class="data-form">
                                                        <p>Nama :</p>
                                                        <p><%= row.nama %></p>
                                                    </div>
    
                                                    <div class="data-form">
                                                        <p>Username :</p>
                                                        <p><%= row.username %></p>
                                                    </div>
                                                    <div class="data-form">
                                                        <p>Nomor HP :</p>
                                                        <p><%= row.no_hp %></p>
                                                    </div>
                                                    <div class="data-form">
                                                        <p>Alamat :</p>
                                                        <p><%= row.alamat %></p>
                                                    </div>
                                                </div>
                                                <div class="footer-modal">
                                                    <button class="btn-edit">Tolak</button>
                                                    <button class="btn-batal" data-dismiss="modal">Batal</button>
                                                </div>
                                            </form>
                            
                            
                                        </div>
                                    
                                    </div>
                                </div>
                            </div>
                            </div>
                        </td>
                    </tr>
                    <% i++ %>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>