<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spa Masker</title>
    <link rel="icon" href="images/logo-web.png">
    <link rel="stylesheet" href="css/spa_page.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    <!-- <script src="js/bodyMassage.js" defer></script> -->
    <script src="js/spa.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</head>

<body>
    <div class="sidebar">
        <%- include('sidebar') %>
    </div>

    <div class="profile">
        <%- include('profile') %>
    </div>

    <div class="pindah">
        <a href="/spaMasker"><button class="btn-masker">Masker</button></a>
        <a href="/spaScrub"><button class="btn-scrub">Scrub</button></a>
    </div>

    <div class="container">
        <button class="btn-tambah" data-toggle="modal" data-target="#tambah">Tambah</button>

        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Aksi</th>
                </tr>
            </thead>

            <tbody>
                <% let i = 1 %>
                <% for(let row of dataSpaMasker) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= row.masker %></td>
                        <td>
                            <a class="btn btn-dark" data-toggle="modal" data-target="#tambahModel<%= row.id_layanan %>"><i class="fa-regular fa-pen-to-square fa-lg" style="color: #000000;"></i></a>
                            <div class="modal fade" id="tambahModel<%= row.id_layanan %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- <span class ="modal-close" data-dismiss="modal"><i class="fa-solid fa-xmark" style="color: #000000;"></i></span> -->
                                        <div class="edit modal-header">
                                            <p>Edit Data masker</p>
                                        </div>
                                        <div class="form">
                                            <form method="post" action="/editMasker/<%= row.id_layanan %>">
                                                <p>Masker</p>
                                                <div class="input-form">
                                                    <i class="fa-solid fa-droplet" style="color: #000000;"></i>
                                                    <input type="text" name="masker" value="<%= row.masker %>" required>
                                                </div>
                                
                                                <div class="footer-modal">
                                                    <button class="btn-edit">Simpan</button>
                                                    <button class="btn-batal" data-dismiss="modal">Batal</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </td>
                    </tr>
                    <% i++ %>
                <% } %>
            </tbody>

        </table>
</body>